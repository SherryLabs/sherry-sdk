{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",  
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,     
    "skipLibCheck": true,       
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true   
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}